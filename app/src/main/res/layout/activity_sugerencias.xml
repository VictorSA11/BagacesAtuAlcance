<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondonoticia"
    tools:context=".ui.gallery.SugerenciasActivity">

    <LinearLayout
        android:layout_width="394dp"
        android:layout_height="721dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="8dp">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="374dp"
            android:layout_height="353dp"
            android:layout_weight="0.7"
            app:srcCompat="@mipmap/buzon1" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:layout_weight="0.7" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="398dp"
            android:layout_weight="0.7"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="377dp">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="372dp"
                android:layout_height="323dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_Suge"
                    android:layout_width="400dp"
                    android:layout_height="108dp"
                    android:background="@mipmap/fondonoticia"
                    android:hint="Agrega una queja o sugerencia"
                    android:textColor="@color/browser_actions_text_color" />

                <Space
                    android:layout_width="360dp"
                    android:layout_height="79dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnNuevaSugerencia"
                    android:layout_width="400dp"
                    android:layout_height="14dp"
                    android:layout_weight="1"
                    android:text="Guardar Sugerencia" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>