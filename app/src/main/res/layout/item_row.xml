<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mostrar_imagen"
        android:layout_width="206dp"
        android:layout_height="207dp"
        android:background="@mipmap/fondonoticia"
        tools:background="@color/blue_grey_300"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:layout_width="193dp"
        android:layout_height="207dp"
        android:orientation="vertical">


        <View
            android:id="@+id/mostrar_fecha"
            android:layout_width="104dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:background="@color/blue_grey_300" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <View
            android:id="@+id/mostrar_ubicacion"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:background="@color/blue_grey_300"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="34dp" />

        <View
            android:id="@+id/mostrar_descripcion"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"

            android:background="@color/blue_grey_300"
            />

    </LinearLayout>
</LinearLayout>