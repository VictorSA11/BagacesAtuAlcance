<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    android:background="@mipmap/fondonoticia"
    android:orientation="horizontal"
    android:padding="8dp">


    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="673dp"
        android:background="@color/com_facebook_button_background_color_focused"
        android:orientation="vertical">


        <TextView
            android:id="@+id/mostrar_fecha"
            android:layout_width="368dp"
            android:layout_height="39dp"
            android:layout_marginStart="8dp"
            android:text="fecha"
            android:textSize="14dp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mostrar_imagen"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:background="@color/md_white_1000"
            app:civ_border_width="2dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="34dp" />

        <TextView
            android:id="@+id/mostrar_ubicacion"
            android:layout_width="366dp"
            android:layout_height="57dp"
            android:layout_marginStart="8dp"
            android:text="ubicacion"
            android:textSize="14dp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <TextView
            android:id="@+id/mostrar_descripcion"
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="descripcion"
            android:textSize="30dp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>